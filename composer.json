{
    "name": "railt/discovery",
    "type": "library",
    "description": "Lightweight cross-package configuration loader",
    "license": "MIT",
    "keywords": [
        "console",
        "autoloader",
        "dependency"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/discovery"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "composer-plugin-api": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Discovery\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "composer/composer": "~1.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Discovery\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Railt\\Discovery\\Manifest::discover"
        ]
    },
    "extra": {
        "discovery": ["allows-in-unit-tests"],
        "allows-in-unit-tests": {
            "example": "valid-value"
        },
        "hide-from-unit-tests": {
            "example": "invalid-value"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
