{
    "name": "railt/discovery",
    "type": "library",
    "description": "Cross-package composer-based configuration loader",
    "license": "MIT",
    "keywords": [
        "console",
        "autoloader",
        "dependency"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/discovery"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "composer-plugin-api": "^1.1|^2.0"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Discovery\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "composer/composer": "~1.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Discovery\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
